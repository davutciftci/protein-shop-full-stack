{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "removeComments": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "",
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false,
    "exactOptionalPropertyTypes": false,
    "strictNullChecks": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "ts-node": {
    "compilerOptions": {
      "moduleDetection": "force",
      "module": "CommonJS",
      "resolveJsonModule": true,
      "allowJs": true,
      "esModuleInterop": true,
      "isolatedModules": true
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}